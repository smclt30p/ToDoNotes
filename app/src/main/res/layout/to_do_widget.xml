<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/widget_todo_listview_background">

    <!-- toolbar -->
    <RelativeLayout
        android:gravity="center"
        android:background="@color/widget_todo_toolbar_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/widget_todo_toolbar_todo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:textSize="18sp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:textColor="@color/widget_todo_text"
            android:text="ToDo"/>


        <ImageView
            android:id="@+id/widget_todo_toolbar_add"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/add"
            />

    </RelativeLayout>




    <!-- active ToDos-->
    <ListView
        android:id="@+id/widget_todo_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp">
    </ListView>


</LinearLayout>