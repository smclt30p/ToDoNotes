<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    tools:context="tk.httpksfdev.todo.AddEntryActivity">


    <EditText
        android:id="@+id/editentry_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:imeOptions="actionDone"
        android:inputType="textCapSentences"
        android:textColor="@color/edit_text_color"
        android:textStyle="italic" />

    <LinearLayout
        android:id="@+id/editentry_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editentry_editText"
        android:layout_margin="16dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/editentry_textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/editentry_editText"
            android:layout_below="@+id/editText"
            android:text="Priority: "
            android:textColor="@color/text_view_color"
            android:textSize="18sp"
            android:textStyle="bold|italic" />


        <RadioGroup
            android:id="@+id/editentry_radioSex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editentry_editText"
            android:layout_marginRight="16dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/editentry_textView2"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/editentry_radio1"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:onClick="onPriorityChanged"
                android:text="High"
                android:textColor="@color/priority_1"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/editentry_radio2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onPriorityChanged"
                android:text="Medium"
                android:textColor="@color/priority_2"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/editentry_radio3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onPriorityChanged"
                android:text="Low"
                android:textColor="@color/priority_3"
                android:textStyle="bold" />

        </RadioGroup>

    </LinearLayout>


    <TextView
        android:id="@+id/editentry_textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editentry_editText"
        android:layout_below="@+id/editentry_linearLayout"
        android:text="More: "
        android:textColor="@color/text_view_color"
        android:textSize="18sp"
        android:textStyle="bold|italic" />


    <EditText
        android:id="@+id/editentry_editTextDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editentry_textView3"
        android:layout_margin="8dp"
        android:background="@color/edit_text_desc_back"
        android:gravity="start"
        android:inputType="textMultiLine|textCapSentences"
        android:minHeight="200dp"
        android:padding="4dp"
        android:textColor="@color/edit_text_text_color"
        android:textStyle="italic" />


    <Button
        android:id="@+id/editentry_button_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@color/colorAccent"
        android:onClick="onSaveButton"
        android:text="Save" />


</RelativeLayout>
