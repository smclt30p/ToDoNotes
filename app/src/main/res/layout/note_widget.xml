<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/widget_note_main_background">


    <!-- toolbar -->
    <RelativeLayout
        android:gravity="center"
        android:background="@color/widget_note_toolbar_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/widget_note_toolbar_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:paddingEnd="20dp"
            android:textSize="18sp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:textColor="@color/widget_note_toolbar_name"
            android:text="@string/widget_note_name"/>


        <ImageView
            android:id="@+id/widget_note_toolbar_add"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/add"
            />

    </RelativeLayout>


    <!-- active note-->
    <TextView
        android:id="@+id/widget_note_item_text"
        android:textColor="@color/widget_note_item_text"
        android:layout_margin="6dp"
        android:textSize="16sp"
        android:text="@string/widget_note_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>